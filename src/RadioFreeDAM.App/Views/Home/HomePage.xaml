<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:RadioFreeDAM.App.ViewModels.Home"
             xmlns:models="clr-namespace:RadioFreeDAM.App.Models"
             x:Class="RadioFreeDAM.App.Views.Home.HomePage"
             Title="Inicio">
    
    <Grid RowDefinitions="Auto,Auto,Auto,*" Padding="20">
        <!-- Header -->
        <Label 
            Grid.Row="0"
            Text="RadioFreeDAM"
            Style="{StaticResource HeaderLabel}"
            Margin="0,10,0,5"/>
        
        <!-- Search Bar -->
        <SearchBar 
            Grid.Row="1"
            Placeholder="Buscar radios..."
            Text="{Binding SearchQuery}"
            SearchCommand="{Binding SearchCommand}"
            Style="{StaticResource SearchBarStyle}"
            Margin="0,5,0,10"/>

        <!-- Quick Filters -->
        <HorizontalStackLayout Grid.Row="2" Spacing="10" HorizontalOptions="Center" Margin="0,0,0,15">
            <Button 
                Text="Radios de España 🇪🇸"
                Command="{Binding LoadSpainRadiosCommand}"
                Style="{StaticResource PrimaryButton}"
                HeightRequest="40"
                Padding="15,0"/>
            <Button 
                Text="Sincronizar"
                Command="{Binding SyncStationsCommand}"
                Style="{StaticResource PrimaryButton}"
                BackgroundColor="{StaticResource BorderDark}"
                HeightRequest="40"
                Padding="15,0"/>
        </HorizontalStackLayout>
        
        <!-- Content -->
        <Grid Grid.Row="3">
            <!-- Loading Indicator -->
            <ActivityIndicator 
                IsRunning="{Binding IsLoading}"
                IsVisible="{Binding IsLoading}"
                Color="{StaticResource Primary}"
                VerticalOptions="Center"
                HorizontalOptions="Center"
                ZIndex="1"/>
            
            <!-- Stations List -->
            <CollectionView 
                ItemsSource="{Binding Stations}">
                <CollectionView.EmptyView>
                    <Label Text="No se encontraron emisoras" 
                           Style="{StaticResource SecondaryLabel}"
                           HorizontalOptions="Center" 
                           VerticalOptions="Center" 
                           Margin="0,50,0,0"/>
                </CollectionView.EmptyView>
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:Station">
                        <Frame Margin="0,8" Padding="0" HasShadow="False" CornerRadius="12" BorderColor="#333" BackgroundColor="Transparent">
                            <Frame.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="#1a1a1a" Offset="0.1" />
                                    <GradientStop Color="#252525" Offset="1.0" />
                                </LinearGradientBrush>
                            </Frame.Background>
                            <Grid ColumnDefinitions="80,*,Auto" Padding="12">
                                <!-- Station Image -->
                                <Frame Grid.Column="0" HeightRequest="65" WidthRequest="65" CornerRadius="8" Padding="0" IsClippedToBounds="True" HasShadow="False" BorderColor="{StaticResource Primary}">
                                    <Image Source="{Binding ImageUrl}" Aspect="AspectFill" />
                                </Frame>
                                
                                <!-- Station Info -->
                                <VerticalStackLayout Grid.Column="1" VerticalOptions="Center" Margin="10,0" Spacing="2">
                                    <Label Text="{Binding Name}" TextColor="White" FontSize="16" FontAttributes="Bold" LineBreakMode="TailTruncation"/>
                                    <Label Text="{Binding Country}" TextColor="#aaa" FontSize="12"/>
                                    <Label Text="{Binding Genre}" TextColor="{StaticResource Primary}" FontSize="11" FontAttributes="Italic"/>
                                </VerticalStackLayout>
                                
                                <HorizontalStackLayout Grid.Column="2" Spacing="8" VerticalOptions="Center" Margin="0,0,5,0">
                                    <Button Text="▶" Style="{StaticResource PrimaryButton}" WidthRequest="44" HeightRequest="44" CornerRadius="22" Padding="0"
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:HomeViewModel}}, Path=PlayCommand}"
                                            CommandParameter="{Binding .}"/>

                                    <Button x:Name="FavoriteBtn"
                                            Style="{StaticResource PrimaryButton}" BackgroundColor="Transparent" 
                                            BorderColor="{StaticResource Primary}" BorderWidth="1"
                                            WidthRequest="44" HeightRequest="44" CornerRadius="22" Padding="0"
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:HomeViewModel}}, Path=AddFavoriteCommand}"
                                            CommandParameter="{Binding .}">
                                        <Button.Triggers>
                                            <DataTrigger TargetType="Button" Binding="{Binding IsFavorite}" Value="True">
                                                <Setter Property="Text" Value="❤️" />
                                                <Setter Property="BackgroundColor" Value="{StaticResource Primary}" />
                                                <Setter Property="TextColor" Value="White" />
                                            </DataTrigger>
                                            <DataTrigger TargetType="Button" Binding="{Binding IsFavorite}" Value="False">
                                                <Setter Property="Text" Value="♡" />
                                                <Setter Property="BackgroundColor" Value="Transparent" />
                                                <Setter Property="TextColor" Value="{StaticResource Primary}" />
                                            </DataTrigger>
                                        </Button.Triggers>
                                    </Button>
                                </HorizontalStackLayout>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </Grid>
    </Grid>
</ContentPage>
