<?xml version="1.0" encoding="UTF-8" ?>
<Application 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:RadioFreeDAM.App"
    xmlns:converters="clr-namespace:RadioFreeDAM.App.Converters"
    x:Class="RadioFreeDAM.App.App">
    
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            
            <!-- Converters Globales -->
            <converters:IsNotNullConverter x:Key="IsNotNullConverter" />
            <converters:PlayPauseGlyphConverter x:Key="PlayPauseGlyphConverter" />
            <converters:BoolToPlayPauseConverter x:Key="BoolToPlayPauseConverter" />
            <converters:InvertedBoolConverter x:Key="InvertedBoolConverter" />
            
        </ResourceDictionary>
    </Application.Resources>
    
</Application>
